{
  "name": "ElectronTemplate",
  "productName": "Finance Me",
  "author": "Taylor Larrechea <tjlarrechea@gmail.com>",
  "description": "A Simple Finance Application",
  "version": "1.0.0",
  "main": "JS/Primary/main.js",
  "repository": "https://github.com/DaTaylorSeries/Electron-Template",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "FinanceMe.app",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "uninstallDisplayName": "FinanceMe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "License/license.txt"
    },
    "mac": {
      "target": "pkg"
    },
    "pkg": {
      "license": "License/license.txt",
      "welcome": "Install Files/Intro",
      "installLocation": "/Applications",
      "background": {
        "alignment": "bottomleft"
      },
      "allowAnywhere": true,
      "allowCurrentUserHome": true,
      "allowRootDirectory": true,
      "isVersionChecked": true,
      "isRelocatable": false,
      "overwriteAction": "upgrade"
    },
    "linux": {
      "target": "deb"
    }
  },
  "devDependencies": {
    "electron": "^11.0.4",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "angularjs": "^0.0.1",
    "electron-hot-reload": "^0.1.4",
    "electron-packager": "^15.1.0",
    "electron-reload": "^1.5.0",
    "react": "^17.0.1"
  }
}
